<h2>
Store : <%= link_to @photo_store.name, photo_store_path(@photo_store)%>
/ Album: <%= link_to @album.name, photo_store_album_path(@photo_store, @album) %>
/ Photo: <%= @photo.name %>
</h2>
<hr>
<div class="col-sm-10 col-md-8" text-align="center">
  <div class="center" width="100%">
    <div class="thumbnail">
      <%= link_to (image_tag @photo.url, width: "100%", height: "80px"), photo_store_album_photo_path(@photo_store, @album, @photo), 'data-no-turbolink' => 'true' %>
      <div class="caption center">
        <h4>
          <%= link_to @photo.name, photo_store_album_photo_path(@photo_store, @album, @photo) %>
        </h4>
        <p><%= @photo.description %></p>
        <p>
        	<%= link_to "Edit.", edit_photo_store_album_photo_path(@photo_store, @album, @photo) %>
<%= link_to "Delete.", photo_store_album_photo_path(@photo_store, @album, @photo),
                    method: :delete,
                    data: { confirm: 'Make sure you want to do this?' }%>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="fb-comments" data-href="http://54.201.117.57:9292/photo_stores/1/albums/1/photos/1" data-width="450" data-numposts="5" data-colorscheme="light">
</div>